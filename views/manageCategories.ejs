<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %> <%-
    include('./partials/backButton.ejs') %>

    <h1><%= title %></h1>

    <form id="addCategoryForm">
      <input type="hidden" name="user_id" value="<%= user_id %>" />
      <label for="categoryName">Add New Category:</label>
      <input type="text" id="categoryName" name="name" required />
      <button id="addCategoryBtn" type="submit">Add</button>
    </form>

    <p id="addCategoryError" style="display:'none'; color:red;"></p>

    <h2>Existing Categories:</h2>
    <ul id="categoriesList">
      <% categories.forEach(category => { %>
      <li id="category-<%= category.id %>">
        <button class="delete-btn" data-id="<%= category.id %>" user-id="<%= user_id %>">x</button>
        <%= category.name %>

      </li>
      <% }) %>
    </ul>
    
    <%- include('./partials/footer.ejs') %>
    
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/categories.js"></script>
</body>
</html>
